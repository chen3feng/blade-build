cc_library(
    name='lowercase',
    srcs=[
         'plowercase.cpp'
         ],
    deps=['#pthread'],
    warning='yes',
    defs=['LOWER_DEF'],
    incs=['include'],
    optimize=['O3'],
    always_optimize=True,
    link_all_symbols=1
)


cc_library(
    name='uppercase',
    srcs=[
         'puppercase.cpp'
         ],
    deps=['#dl'],
    link_all_symbols=1
)


cc_plugin(
    name='string_plugin',
    srcs=[
         'string_plugin.cpp'
         ],
    deps=[
         ':lowercase',
         ':uppercase',
         '#pthread',
         '#dl'
         ],
    defs=['BLADE_STR_DEF'],
    extra_linkflags='-Wl,-Bsymbolic'
)

